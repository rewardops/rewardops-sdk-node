{
  "name": "@rewardops/sdk-node",
  "version": "1.0.1",
  "engines": {
    "node": ">=10"
  },
  "description": "Node.js SDK for the RewardOps API",
  "author": "RewardOps",
  "license": "MIT",
  "contributors": [
    {
      "name": "Michael Yeung",
