{
  "source": {
    "include": "./lib",
    "includePattern": ".js$",
    "exclude": "./index.js",
    "excludePattern": "(node_modules/|docs)"
  },
  "opts": {
    "destination": "docs/",
    "recurse": true,
    "readme": "README.md",
    "template": "node_modules/better-docs"
  },
  "templates": {
    "cleverLinks": true
  },
  "plugins": ["plugins/markdown"]
}
